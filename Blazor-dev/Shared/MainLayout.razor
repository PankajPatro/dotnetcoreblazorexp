@inherits LayoutComponentBase
@inject WebApplication1.Data.ViewDataService ViewDataService

<AuthorizeView>
    <NotAuthorized>
        <Login></Login>
    </NotAuthorized>
    <Authorized>
        <MatAppBarContainer>
            <MatAppBar Fixed="true" Style="z-index:99">
                <MatAppBarRow>
                    <MatAppBarSection>
                        <MatIconButton Icon="menu" OnClick="@((e) => ButtonClicked())"></MatIconButton>
                        <MatAppBarTitle>@ViewDataService.Caption</MatAppBarTitle>
                    </MatAppBarSection>
                    <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                        <Search></Search>
                    </MatAppBarSection>
                </MatAppBarRow>
            </MatAppBar>
            <MatAppBarContent>
                <MatDrawerContainer Style="height: 95vh;">
                    <MatDrawer @bind-Opened="@Opened">
                        <NavMenu></NavMenu>
                    </MatDrawer>
                    <MatDrawerContent>
                        @Body
                    </MatDrawerContent>
                </MatDrawerContainer>
            </MatAppBarContent>
        </MatAppBarContainer>
    </Authorized>
</AuthorizeView>




@functions
{
    bool Opened = true;
 
    void ButtonClicked()
    {
        Opened = !Opened;
    }
 
}