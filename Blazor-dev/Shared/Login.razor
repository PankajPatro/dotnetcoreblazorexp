<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <div class="mat-layout-grid-cell mat-layout-grid-cell-span-8">
            <p>
                <span>About Us</span>

            </p>
            <p>
                <MatButton OnClick="@Register" Raised="true">Register</MatButton>
                <MatDialog @bind-IsOpen="@dialogIsOpen">
                    <MatDialogTitle>Register</MatDialogTitle>
                    <MatDialogContent>
                        <p>What's your favorite animal?</p>
                        <MatTextField @bind-Value="@dialogAnimal"></MatTextField>
                    </MatDialogContent>
                    <MatDialogActions>
                        <MatButton OnClick="@(e => { dialogIsOpen = false; })">No Thanks</MatButton>
                        <MatButton OnClick="@OkClick">OK</MatButton>
                    </MatDialogActions>
                </MatDialog>
            </p>
        </div>
        <div class="mat-layout-grid-cell mat-layout-grid-cell-span-4">
            <style>
                .demo-mat-card {
                    max-width: 400px;
                }
    
                .demo-mat-card-content {
                    padding: 1rem;
                }
    
                .demo-mat-card-clean-margin {
                    margin: 0px;
                }
            </style>
            <MatCard class="demo-mat-card">
                <MatCardContent>
                    <MatCardMedia Wide="true" ImageUrl="/assets/loginpage.jpg"></MatCardMedia>
                    <div class="demo-mat-card-content">
                        <MatHeadline6 class="demo-mat-card-clean-margin">
                            <p>
                                <MatTextField Required="true" FullWidth="true" @bind-Value="@UserName" Label="UserName" Icon="person" IconTrailing="true"></MatTextField>
                            </p>
                            <p>
                                <MatTextField Required="true" Type="password" FullWidth="true" @bind-Value="@Password" Label="Password" Icon="lock_outline" IconTrailing="true"></MatTextField>
                            </p>
                        </MatHeadline6>
                        <MatSubtitle2 class="demo-mat-card-clean-margin">
                            <MatButton Raised="true" OnClick="@LoginUser">Login</MatButton>
                        </MatSubtitle2>
                    </div>
    
                    <MatBody2 class="demo-mat-card-content demo-mat-card-clean-margin">
                        Login to manage your orders.
                    </MatBody2>
                </MatCardContent>
            </MatCard>
        </div>
    </div>
</div>
@functions
{

    public string UserName
    {
        get => _userName;
        set
        {
            _userName = value;
            this.StateHasChanged();
        }
    }

    public string Password
    {
        get => _password;
        set
        {
            _password = value;
            this.StateHasChanged();
        }
    }

